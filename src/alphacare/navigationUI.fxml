            <Font size="18.0" />
         </font>
      </Text>
      <Button fx:id="updateRecord" layoutX="427.0" layoutY="203.0" mnemonicParsing="false" onAction="#loadUpdateRecord" style="-fx-background-color: black;" text="Update Record" textFill="WHITE" />
   </children>
</AnchorPane>
