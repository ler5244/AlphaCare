   <children>
      <ImageView fitHeight="406.0" fitWidth="746.0" layoutX="-1.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@blue-gradient-background.png" />
         </image>
      </ImageView>
      <Label layoutX="134.0" layoutY="42.0" text="Welcome to AlphaCare Home Page" textFill="WHITE">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <Button fx:id="createRecord" layoutX="224.0" layoutY="203.0" mnemonicParsing="false" onAction="#loadCreateRecord" style="-fx-background-color: black;" text="Create Record" textFill="WHITE" />
